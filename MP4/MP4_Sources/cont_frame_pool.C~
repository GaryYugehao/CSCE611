const unsigned int ContFramePool::pool_max_cnt=10;
unsigned int ContFramePool::last_pool_idx=0;
ContFramePool* ContFramePool::pools_list[pool_max_cnt];

/*--------------------------------------------------------------------------*/
/* METHODS FOR CLASS   C o n t F r a m e P o o l */
/*--------------------------------------------------------------------------*/

ContFramePool::ContFramePool(unsigned long _base_frame_no,
                             unsigned long _n_frames,
                             unsigned long _info_frame_no,
                             unsigned long _n_info_frames)
{
    // TODO: IMPLEMENTATION NEEEDED!

    
    base_frame_no = _base_frame_no;
    nframes = _n_frames;
    nFreeFrames = _n_frames;
    info_frame_no = _info_frame_no;
	n_info_frames = _n_info_frames;

    //If the info_frame_no == 0, then we just need to keep it in the first frame
    //otherwise we have to start with the the info_frame)no
    if(info_frame_no == 0) {
        bitmap = (unsigned char *) (base_frame_no * FRAME_SIZE);
    } else {
        bitmap = (unsigned char *) (info_frame_no * FRAME_SIZE);
    }

	
    
    
    //Use bitmap to store the used/free/head information of frames in the pool
    for(int i=0; i < _n_frames; i++) {
        bitmap[i] = 0;  
	// 0 represented free, firstly we set all bits free
	// 1 represented used, 2 represented head 
    }
    
    //if the frames are being used, we should label the first frame as the sequence head with state 2
    if(_info_frame_no == 0) {
	bitmap[0] = 2;
	//If there is less than 1 frame being used, just reduce the head frame from free frames
	if(_n_info_frames <= 1) {
		nFreeFrames--;
	//otherwise labeled left frames as used and reduce correspongding frames
	}else {
		for(int i=1; i < _n_info_frames; i++) {
			bitmap[i] = 1;
			nFreeFrames-=_n_info_frames;
		}
	}
    }


	pools_list[last_pool_idx] = this;
	last_pool_idx++;   


    Console::puts("Frame Pool initialized\n");
}

unsigned long ContFramePool::get_frames(unsigned int _n_frames)
{
    // TODO: IMPLEMENTATION NEEEDED

	//unsigned int valid_head_idx = base_frame_no;
	unsigned int unused_len = 0;
	unsigned int cur_step = 0;
	unsigned int head_idx;

	while (unused_len < _n_frames) {
		//Keep finding the next unused sequence(0)
		while ((bitmap[cur_step] != 0) &(cur_step < nframes) ) {
			cur_step++;
		}
		
		//Once we find out it, assign it(position of first 0) to head_idx	
		head_idx = cur_step;  
		//keep going to count if unused frame length met the requirement
		while ((bitmap[cur_step] == 0) &(cur_step < nframes) ) {
			cur_step++;
			unused_len++;
			if (unused_len == _n_frames) {
				break;
			}
		}
		//If we reached the end, then return failed
		if (cur_step >= nframes) {
			Console::puts("We can't find out enough unused frames to store.\n");
			return 0;
		}

	}
 
    
    //mark the unused frames as used
    mark_inaccessible((base_frame_no+head_idx), _n_frames);
    Console::puts("Successfully get the frames .\n");
    
    return (base_frame_no+head_idx);  

}

void ContFramePool::mark_inaccessible(unsigned long _base_frame_no,
                                      unsigned long _n_frames)
{
    // TODO: IMPLEMENTATION NEEEDED!

	//head is the logical frame index of inaccessible frames head
	unsigned int head = _base_frame_no - base_frame_no;
	//head is the logical frame index of inaccessible frames tail
	unsigned int tail = _base_frame_no - base_frame_no+_n_frames;
	assert((head >= 0) && (tail <= nframes));
	bitmap[head] = 2;
	//mark all the frames except head as used
	for (int i = head + 1; i < tail; i++) {
		bitmap[i] = 1;
	}
	// remove same length of free frames
	nFreeFrames -= _n_frames;

}



void ContFramePool::release_frames(unsigned long _first_frame_no)
{
    //traverse all the pools to see if the given frame number existed

	for(int i = 0; i < last_pool_idx; i++) {
		ContFramePool* current = pools_list[i];
		unsigned long current_head = (_first_frame_no - (current->base_frame_no));
		unsigned long current_tail = (_first_frame_no - (current->nframes));
		//we find out a pool that include given frame number
		if((current_head >= 0) && (current_tail < 0)) {
			current->_helper(_first_frame_no);
			Console::puts("Released the frames.\n");
			return;
		}
	}
	//Console::puts("Failed to release frames.\n");

}

void ContFramePool::_helper(unsigned long _first_frame_no)
{


	unsigned int head_pos;
	unsigned int tail_pos;
	unsigned int tail = base_frame_no + nframes;
	unsigned int cur = (unsigned int) _first_frame_no - base_frame_no;
	// find the head of used frames and store index
	while((cur < tail) & (bitmap[cur] != 2)){
		cur++;			
	}
	head_pos = cur;
	cur++;
	// find the tail of used frames and store index
	while((cur < tail) & (bitmap[cur] == 1)){
		cur++;			
	}
	tail_pos = cur;
	//release all the frames labeled
	for(int i=head_pos; i<tail_pos;i++){
		bitmap[i] = 0;
	}
	//add frames into free frames pool
	nFreeFrames += (tail_pos-head_pos);
}

unsigned long ContFramePool::needed_info_frames(unsigned long _n_frames)
{
    // TODO: IMPLEMENTATION NEEEDED!
	return (_n_frames) / FRAME_SIZE + (_n_frames % FRAME_SIZE > 0 ? 1 : 0);

}





